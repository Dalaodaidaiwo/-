
/* pages/search/search.wxss */
page{
  background: white;
}

.res-container {
    display: flex;
    align-items: row;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 20rpx;
    width: 700rpx;
    background-color:white;
}
.res-user-name {
  
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

.res-smallname{
    font-size: 9px;
    color: #777;
    padding-top: 5px;
}
.res-tip{
  display: flex;
  flex-direction: row;
  margin-top:2ch;
    padding-top:15px;
    padding-left: 15px;
    font-size: 14px;
    color: #333;
    background-color: #f7f7f7;
    height: 80rpx;
}


.res-user-info {
    align-self: flex-start;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
}


.container {
  margin: 20rpx;
  display: flex;
  direction: row;
  position: relative;
  width: 100%;
  height: 100vh;
  background-color:white;
  color: #939393;
}

.icon{
  margin: 20rpx;
}

.search{
margin-top: 5rpx;
  width: 100%;
  height: 85%;
  background:white;
  display: flex;
  direction: row;
}
.mytextsize{
  width: 45vh;
  display:flex;
  flex-direction: row;
  margin-right: 50rpx;
}
.mytext{
  height: 5vh;
  color:rgb(59, 56, 56);
  background-color: white;
}
.myimagesize{
  width: 15vh;
  display:flex;
  flex-direction: row-reverse;
  justify-content: right;
  margin-right: 40rpx;
}
.myimage{
  width:60rpx;
  height:60rpx;
}







